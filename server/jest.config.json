{
  "testEnvironment": "node",
  "setupFilesAfterEnv": ["<rootDir>/__tests__/setup.js"],
  "collectCoverageFrom": [
    "**/*.js",
    "!**/node_modules/**",
    "!**/coverage/**",
    "!**/bin/**",
    "!**/migrations/**",
    "!**/config/**",
    "!**/__tests__/**",
    "!jest.config.js"
  ],
  "coverageReporters": ["text", "lcov", "html"],
  "coverageThreshold": {
    "global": {
      "branches": 90,
      "functions": 90,
      "lines": 90,
      "statements": 90
    }
  },
  "testMatch": ["**/__tests__/**/*.test.js"],
  "verbose": true,
  "forceExit": true,
  "detectOpenHandles": true,
  "maxWorkers": 1
}
